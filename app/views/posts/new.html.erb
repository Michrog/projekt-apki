<h1>New Post</h1>

<%= form_for(:post, url: users_posts_new_path(:id => current_user.id, :current_profile_id => current_user.current_profile_id)) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.hidden_field :post_group, :value => nil %>
  <%= f.hidden_field :profile_id, :value => params[:current_profile_id] %>
  <%= f.hidden_field :post_date, :value => DateTime.current.to_date %>

  <%= f.label :content %>
  <%= f.text_area :content, class: 'form-control' %>

  <%= f.submit "Create Post" %>
<% end %>

<%= link_to 'Back', current_user %>
